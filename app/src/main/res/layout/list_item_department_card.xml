<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#2A4B8D"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Department Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/department_icon_card"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/department_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@android:color/white"
                tools:src="@drawable/ic_launcher_background" /> <!-- Replace with your actual logo placeholder -->

        </com.google.android.material.card.MaterialCardView>

        <!-- Department Name -->
        <TextView
            android:id="@+id/department_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Information Technology\nEngineering"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/department_icon_card"
            app:layout_constraintTop_toTopOf="@id/department_icon_card"
            app:layout_constraintEnd_toStartOf="@id/see_detail_button"
            app:layout_constraintBottom_toBottomOf="@id/department_icon_card"/>

        <!-- See Detail Button -->
        <TextView
            android:id="@+id/see_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See Detail >"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/department_name"
            app:layout_constraintBottom_toBottomOf="@id/department_name"/>

        <!-- Seats Available Label -->
        <TextView
            android:id="@+id/seats_available_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Seats available"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/department_icon_card" />

        <!-- Seats Count -->
        <TextView
            android:id="@+id/seats_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="74/400"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/seats_available_label"
            app:layout_constraintBottom_toBottomOf="@id/seats_available_label"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/seats_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:max="400"
            android:progress="74"
            android:progressDrawable="@drawable/custom_progress_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seats_available_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
