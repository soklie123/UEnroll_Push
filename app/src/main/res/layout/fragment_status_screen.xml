<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4FF"
    android:fillViewport="true"
    tools:context=".user.StatusScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Enrollment Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/status_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Header -->
                <TextView
                    android:id="@+id/tv_enrollment_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enrollment Status"
                    android:textColor="#3F51B5"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Progress Section -->
                <TextView
                    android:id="@+id/tv_progress_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Progress:"
                    android:textColor="#3F51B5"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_enrollment_status_title" />

                <TextView
                    android:id="@+id/tv_progress_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0%"
                    tools:text="40%"
                    android:textColor="#FF9800"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/tv_progress_label"
                    app:layout_constraintStart_toEndOf="@id/tv_progress_label"
                    app:layout_constraintTop_toTopOf="@id/tv_progress_label" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:progress="0"
                    tools:progress="40"
                    app:indicatorColor="#4CAF50"
                    app:layout_constraintBottom_toBottomOf="@id/tv_progress_percentage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_progress_percentage"
                    app:layout_constraintTop_toTopOf="@id/tv_progress_percentage"
                    app:trackColor="#E0E0E0"
                    app:trackCornerRadius="8dp"
                    app:trackThickness="12dp" />

                <!--
                CORRECTION: The static LinearLayout has been replaced
                with a RecyclerView for dynamic data.
                -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_status_items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_progress_label"
                    tools:listitem="@layout/item_status_completed"
                    tools:itemCount="4" />

                <!-- View Detail Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_detail"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:text="View Detail"
                    android:textAllCaps="false"
                    android:textColor="#7986CB"
                    android:textSize="16sp"
                    app:backgroundTint="#E8EAF6"
                    app:cornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_status_items" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
