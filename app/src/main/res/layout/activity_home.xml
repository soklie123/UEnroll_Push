<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_cool_bg"
    tools:context=".HomeActivity">

    <!-- Custom Top Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="48dp"

        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/brandGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/logo_app" />

            <TextView
                android:id="@+id/tvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="UniGo"
                android:textColor="#1A237E"
                android:textSize="22sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />
        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iconProfile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_profile_placeholder"
            app:strokeWidth="2dp"
            app:strokeColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircularImage" />

        <FrameLayout
            android:id="@+id/notificationContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_margin="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iconProfile"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconNotification"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_ic_notification"
                app:tint="#1A237E" />

            <!-- Red dot badge -->
            <View
                android:id="@+id/badgeDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/red_dot"
                android:visibility="gone" />
        </FrameLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintTop_toBottomOf="@id/customTopBar"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:navGraph="@navigation/main_nav_graph" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/nav_glass_bg"
        android:paddingTop="8dp"
        app:elevation="30dp"
        app:itemIconSize="26dp"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>