<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.StudentEnrollmentApp"
        parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary -->
        <item name="colorPrimary">@color/blue_sky</item>
        <item name="colorPrimaryContainer">@color/blue_flat</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/background_gray</item>
        <item name="colorSurface">@color/white</item>

        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_dark_flat</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

</resources>
